<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<class xmlns="http://www.romaframework.org/xml/roma" xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
	xsd:schemaLocation="http://www.romaframework.org/xml/roma http://www.romaframework.org/schema/v3/roma.xsd">
	<aspects>
		<view>
			<form>
				<area name="main" size="1" type="grid">
					<area name="fields" type="row" />					
					<area name="actions" type="row" />
					<area align="top" name="paginedElements" size="1" type="grid">
						<area align="top" name="elements" />
						<area align="bottom" name="bottomPanel" size="2" type="grid">
							<area align="center left" name="bottomPanelActions" type="row">
								<area align="center left" name="selectAll" />
								<area align="center left" name="deselectAll" />
							</area>
							<area align="center right" name="paging" />
						</area>
					</area>
				</area>
			</form>
		</view>
	</aspects>
</class>
