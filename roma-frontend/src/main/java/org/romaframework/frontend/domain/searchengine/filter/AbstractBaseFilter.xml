<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.romaframework.org/xml/roma" xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
	xsd:schemaLocation="http://www.romaframework.org/xml/roma http://www.romaframework.org/schema/v3/roma.xsd">
	<aspects>
		<view>
			<form>
				<area name="main" type="column">
					<area name="fields" type="form" size="2" />
					<area name="actions" type="row" />
				</area>
			</form>
		</view>
	</aspects>
	<fields>
		<field name="name" />
		<field name="entity">
			<aspects>
				<core useRuntimeType="true" expand="true"/>
			</aspects>
		</field>
		<field name="backObject">
			<aspects>
				<view visible="false" />
			</aspects>
		</field>
		<field name="queryStrategy">
			<aspects>
				<view visible="false" />
			</aspects>
		</field>
		<field name="entityClass">
			<aspects>
				<view visible="false" />
			</aspects>
		</field>
	</fields>
	<actions>
		<action name="ok" />
		<action name="cancel" />
	</actions>
</class>
