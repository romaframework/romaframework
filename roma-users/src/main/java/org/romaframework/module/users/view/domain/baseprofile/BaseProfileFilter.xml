<?xml version="1.0" encoding="UTF-8"?>
<class xmlns="http://www.romaframework.org/xml/roma" xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
	xsd:schemaLocation="http://www.romaframework.org/xml/roma http://www.romaframework.org/schema/v3/roma.xsd">
	<aspects>
		<view>
			<form>
				<area name="main" type="column" align="top right">
					<area name="fields" type="form" size="4" align="top left" />
					<area name="actions" type="row" align="top left" />
				</area>
			</form>
		</view>
	</aspects>
	<fields>
		<field name="functions">
			<aspects>
				<view visible="false" />
			</aspects>
		</field>
		<field name="mode">
			<aspects>
				<view visible="false" />
			</aspects>
		</field>
		<field name="notes">
			<aspects>
				<view render="text"></view>
			</aspects>
		</field>
	</fields>
</class>
